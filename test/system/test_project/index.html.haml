!!! XML
!!! Strict

%html{html_attrs}
  %head
    %title<
      &= title
    
    %link(rel='stylesheet'
          href='style/elastatic/reset-min.css'
          media='all')
    
    %link(rel='stylesheet'
          href='style/elastatic/general.css'
          media='all')
  
  %body
    %h1<
      &= title
    
    - unless section.entries.empty? || section.entries.first.index?
      %ul.entries
        - section.entries.each do |e|
          - next if e.index?
          %li.entry<
            %a(href="#{e.href}")><
              &= e.title
    
    - unless section.subsections.empty?
      .sections
        - section.subsections.each do |s|
          - next if s.empty?
          .section
            %h2<
              - if (index = s.index)
                %a(href="#{index.href}")><
                  &= index.title
              - else
                = s.title
    
    .footer
      %hr
      
